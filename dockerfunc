# webcam and motion detection server
motion(){
	del_stopped motion

	docker run -d \
	--restart always \
	--device=/dev/bus/usb \
	-p 8080:8080 \
    -p 8081:8081 \
#   -v ./motion.conf:/etc/motion/motion.conf
    -v ./motion:/var/lib/motion \
	--name motion \
	mitchtech/rpi-motion
}
