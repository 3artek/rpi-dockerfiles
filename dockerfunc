# fm radio transmit pifm(sound_file, frequency)
pifm(){
	del_stopped pifm
	local sound_file=$1
	local frequency=$2

	docker run -d \
	--cap-add SYS_RAWIO \
	--device /dev/mem \
	--name pifm \
	mitchtech/rpi-pifm ${sound_file} ${frequency}
}
