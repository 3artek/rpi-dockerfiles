# web-based gui for docker
dockerui(){
	del_stopped dockerui

	docker run -d \
	-p 9000:9000 \
	-v /var/run/docker.sock:/var/run/docker.sock \
	--name dockerui \
	hypriot/rpi-dockerui
}
# adsb decoder for rtl-sdr
dump1090(){
	docker run --rm -it \
	--net host \
	-p 8080:8080 \
	--device=/dev/bus/usb \
	--name dump1090 \
	mitchtech/dump1090 
}
# frequency show visual spectrum analyzer
freqshow(){
	docker run --rm -it \
	--privileged \
	--device=/dev/bus/usb \
	-v /var/run/docker.sock:/var/run/docker.sock \
	-e DISPLAY=172.17.42.1:0.0 \
	--name freqshow \
	mitchtech/freqshow 
}
